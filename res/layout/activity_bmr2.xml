<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Bmr2Activity">

    <EditText
        android:id="@+id/editTextBMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기초대사량 입력"
        android:fontFamily="@font/puradak"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="값 입력"
        android:fontFamily="@font/puradak"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:fontFamily="@font/puradak"
        android:text="계산하기" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="유지 칼로리:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:fontFamily="@font/puradak"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="bottom|center_horizontal|top|left"
        android:text="값 입력 시 참고 바람"
        android:fontFamily="@font/puradak"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/puradak"
        android:text="거의 운동을 하지 않는다 -----> 1.5" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/puradak"
        android:text="주 1~3회 운동을 한다 -----> 1.375" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/puradak"
        android:text="주 3~5회 운동을 한다 -----> 1.55" />

    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/puradak"
        android:text="주 6~7회 운동을 한다 -----> 1.725" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/puradak"
        android:text="매일 운동을 2번 이상 한다 -----> 1.9" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:fontFamily="@font/puradak"
        android:text="유지 칼로리는 체중을 유지하기 위해 신체에 필요한 칼로리이다. "
        android:textSize="14sp" />

    <Button
        android:id="@+id/nextButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="next2"
        android:backgroundTint="#009688"
        android:fontFamily="@font/puradak"
        android:text="다음" />

</LinearLayout>
